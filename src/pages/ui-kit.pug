extends layouts/layout.pug

block head
  title Colors &amp; Type
block content
  .block
    .colors
      each color in colorPalette
        .block-color
          .color-square(class=color.class)
          p
            b= color.name
            br
            span= color.hex
    .types
      each type in typography
        .block-type
          #{type.tag}(class="title")= type.name
          #{type.tag}(class="text")= type.example